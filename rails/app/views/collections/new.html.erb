<h3>Create</h3>
<%= form_with model: @collection do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% @collection.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>