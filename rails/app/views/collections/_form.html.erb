<%= form_with model: @collection do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% @collection.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :collection_type %>
    <%= form.collection_select(:collection_type_id, CollectionType.all, :id, :name) %>
    <% @collection.errors.full_messages_for(:collection_type).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>