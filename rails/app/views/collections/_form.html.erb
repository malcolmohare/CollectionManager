<%= form_with(model: @collection, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <%= render "text_field", form: form, field_name: :name, form_obj: @collection %>
  <%= render "dropdown_field", form: form, field_name: :collection_type,
  dropdown_contents: CollectionType.all, form_obj: @collection %>
  <%= render "dropdown_field", form: form, field_name: :parent,
    dropdown_contents: [Collection.new(name: "No Parent")] + Collection.where.not(id: @collection.id),
    form_obj: @collection %>
  <%= render "submit_button", form: form %>
<% end %>