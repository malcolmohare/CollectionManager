<p>Welcome to collection manager!</p>

<p>Some blurb about how to use it</p>

<h3>Newest Collections</h3>
<ul class="list-none">
  <% @collections.each do |collection| %>
    <li
      class="w-full border-b-2 border-neutral-100 border-opacity-100 py-4 dark:border-opacity-50">
      <% if user_signed_in? %>
        <% if current_user.user_collections.any? {|c| c.collection_id == collection.id} %>
          <p>Collecting</p>
        <% else %>
          <p><a href="/collections/<%= collection.id %>/collect">Start Collection</a></p>
        <% end %>
      <% end %>
      <a href="/collections/<%= collection.id %>">
        <%= collection.name %>
      </a>
      <p><%= collection.collection_type.name %></p>
    </li>
  <% end %>
</ul>