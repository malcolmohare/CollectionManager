<p>Welcome to collection manager!</p>

<p>Some blurb about how to use it</p>

<h3>Newest Collections</h3>
<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <th class="px-6 py-3">Collection Name</th>
    <% if user_signed_in? %>
      <th class="px-6 py-3">Collecting State</th>
    <% end %>
    <th class="px-6 py-3"># Items</th>
    <th class="px-6 py-3">Category</th>
  </thead>
  <tbody>
  <% @collections.each do |collection| %>
    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
      <td class="px-6 py-4">
        <a href="/collections/<%= collection.id %>"><%= collection.name %></a>
      </td>
      <% if user_signed_in? %>
      <td class="px-6 py-4">
        <% if current_user.user_collections.any? {|c| c.collection_id == collection.id} %>
          <span class="bg-green-100 sm:rounded px-2 py-2">Collecting</span>
        <% else %>
          <a href="/collections/<%= collection.id %>/collect">Start Collection</a>
        <% end %>
      <% end %>
      </td>
      <td class="px-6 py-4"><%= collection.collection_items.count %></td>
      <td class="px-6 py-4"><%= collection.collection_type.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>