<div class="flex flex-row">
  <span class="basis-1/2">Categories</span>
  <% if user_signed_in? %>
  <a href="/collection_types/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Create new collection type</a>
  <% end %>
</div>



<ul class="list-none">
  <% @collection_types.each do |collection_type| %>
    <li
      class="w-full border-b-2 border-neutral-100 border-opacity-100 py-4 dark:border-opacity-50">
      <a href="/collection_types/<%= collection_type.id %>">
        <%= collection_type.name %>
      </a>
    </li>
  <% end %>
</ul>