<%= form_with model: @collection_item do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% @collection_item.errors.full_messages_for(:name).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :collection %>
    <%= form.collection_select(:collection_id, Collection.all, :id, :name) %>
    <% @collection_item.errors.full_messages_for(:collection_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>