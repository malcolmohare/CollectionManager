<div class="mb-6">
  <%= form.label field_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.text_field field_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  <% form_obj.errors.full_messages_for(field_name).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>